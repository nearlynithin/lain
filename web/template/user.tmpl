{{ template "layout.tmpl" .}}

{{define "content"}}
    <main>
        <h1>{{.User.Username}}</h1>

        <h3>{{.User.PostsCount}} Posts</h3>
        {{if eq (len .Posts) 0}}
        <p>No posts yet</p>
        {{else}}
        <section style="display: flex; flex-direction: column; gap: 1rem;">
            {{range .Posts}}
            {{template "post-article.tmpl" .}}
            {{end}}
    </section>
        {{end}}
    </main>
{{end}}